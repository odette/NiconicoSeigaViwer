<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android"
	>
	<!-- ボタンが押されていない -->
	<!-- フォーカスされた -->
	<item 
		android:state_pressed="false"
		android:state_focused="true">
		<shape>
			<gradient
				android:startColor="#FFF3F7"
				android:endColor="#FFB5D0"
				android:angle="270"/>
		</shape>
	</item>
	<!-- ボタンが押されている -->
	<!-- フォーカスされていない -->
	<item 
		android:state_pressed="true"
		android:state_focused="false">
		<shape>
			<gradient
				android:startColor="#FFF3F7"
				android:endColor="#FFB5D0"
				android:angle="270"/>
		</shape>
	</item>
	<!-- ボタンが押されている -->
	<!-- フォーカスされた -->
	<item 
		android:state_pressed="true"
		android:state_focused="true">
		<shape>
			<gradient
				android:startColor="#FFF3F7"
				android:endColor="#FFB5D0"
				android:angle="270"/>
		</shape>
	</item>
	<item 
		android:state_pressed="false"
		android:state_focused="false"
		android:drawable="@android:color/transparent" />
</selector>
