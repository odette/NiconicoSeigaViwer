<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical">
		<jp.ddo.trismegistos.androidutil.view.WebImageView
			android:id="@+id/image"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_margin="5dp"/>
		<RelativeLayout
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="100dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="5dp">
			<TextView
				android:id="@+id/rank"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:layout_alignParentRight="true"
				android:textSize="80sp"
				android:textColor="@color/rank_color"
				android:background="@color/cleanness"/>
			<TextView
				android:id="@+id/pos"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"
				android:textSize="15sp"
				android:text="@string/nickname_pos"
				android:textColor="@color/nickname_pos_color"
				android:background="@color/cleanness"/>
			<TextView
				android:id="@+id/nickname"
				android:layout_toRightOf="@id/pos"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:textSize="15sp"
				android:textColor="@color/nickname_color"
				android:background="@color/cleanness"/>
			<TextView
				android:id="@+id/title"
				android:layout_below="@id/pos"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:layout_alignParentLeft="true"
				android:ellipsize="end"
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="@color/title_color"
				android:background="@color/cleanness"/>
		</RelativeLayout>
	</LinearLayout>

</LinearLayout>